{
  "routes": [
    {
      "method": "GET",
      "path": "/designs",
      "handler": "designs.find",
      "config": {
        "policies": []
      }
    },
    {
      "method": "GET",
      "path": "/designs/count",
      "handler": "designs.count",
      "config": {
        "policies": []
      }
    },
    {
      "method": "GET",
      "path": "/view-design/:id",
      "handler": "designs.viewDesign",
      "config": {
        "policies": []
      }
    },
    {
      "method": "GET",
      "path": "/designs/:id",
      "handler": "designs.findOne",
      "config": {
        "policies": []
      }
    },
    {
      "method": "POST",
      "path": "/designs",
      "handler": "designs.create",
      "config": {
        "policies": ["checkDuplicateDesignWhileAdding"]
      }
    },
    {
      "method": "POST",
      "path": "/designs/duplicate-design",
      "handler": "designs.duplicateDesign",
      "config": {
        "policies": []
      }
    },

    {
      "method": "PUT",
      "path": "/designs/:id",
      "handler": "designs.update",
      "config": {
        "policies": ["checkDuplicateDesignWhileEditing"]
      }
    },
    {
      "method": "DELETE",
      "path": "/designs/:id",
      "handler": "designs.delete",
      "config": {
        "policies": []
      }
    },
    {
      "method": "GET",
      "path": "/designs-for-parties",
      "handler": "designs.designForParties",
      "config": {
        "policies": []
      }
    }
  ]
}
